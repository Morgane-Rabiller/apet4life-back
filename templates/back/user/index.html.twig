{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Siret</th>
                <th>Mail</th>
                <th>Password</th>
                <th>Adress</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>Department</th>
                <th>Region</th>
                <th>Phone_number</th>
                <th>Description</th>
                <th>Status</th>
                <th>Picture</th>
                <th>Website</th>
                <th>Roles</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.type }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.siret }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.adress }}</td>
                <td>{{ user.zipcode }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.department }}</td>
                <td>{{ user.region }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.description }}</td>
                <td>{{ user.status ? 'Yes' : 'No' }}</td>
                <td>{{ user.picture }}</td>
                <td>{{ user.website }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.slug }}</td>
                <td>
                    <a href="{{ path('app_back_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="21">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_user_new') }}">Create new</a>
{% endblock %}
