{% extends 'base.html.twig' %}

{% block title %}Liste associations{% endblock %}

{% block body %}
    <h1>Liste des associations</h1>

    <table class="table table-striped table-bordered">
        <thead class="tableau">
            <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Region</th>
                <th>Status</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.department }}</td>
                <td>{{ user.region }}</td>
                <td>{{ user.status ? 'Yes' : 'No' }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_back_user_show_asso', {'id': user.id}) }}" class="btn btn-profil">show</a>
                    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn btn-edit">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="21">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_user_new') }}" class="btn btn-profil" style="margin-bottom:20px">Create new</a>
{% endblock %}
