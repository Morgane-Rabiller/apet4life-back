{% extends 'base.html.twig' %}

{% block title %}Association{% endblock %}

{% block body %}

    <h1>{{ user.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>Siret</th>
                <td>{{ user.siret }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ user.adress }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ user.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ user.department }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ user.region }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ user.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ user.picture }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ user.website }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_user_asso') }}" class="btn btn-profil">back to list</a>

    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn btn-edit">edit</a>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
