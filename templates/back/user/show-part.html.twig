{% extends 'base.html.twig' %}

{% block title %}Particulier{% endblock %}

{% block body %}

    <h1>{{ user.firstname}} {{ user.lastname }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Siret</th>
                <td>{{ user.siret }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ user.department }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ user.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ user.picture }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_user_asso') }}" class="btn btn-profil">back to list</a>

    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn btn-edit">edit</a>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
