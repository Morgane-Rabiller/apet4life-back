{% extends 'base.html.twig' %}

{% block title %}Particulier{% endblock %}

{% block body %}

    <h1>{{ user.firstname}} {{ user.lastname }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>Departement</th>
                <td>{{ user.department }}</td>
            </tr>
            <tr>
                <th>Numero de téléphone</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Statue</th>
                <td>{{ user.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.picture }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_particular') }}" class="btn btn-profil">Retour à la liste</a>

    <a href="{{ path('app_back_part_edit', {'id': user.id}) }}" class="btn btn-edit">Editer</a>

    {{ include('back/user/_delete_form-part.html.twig') }}
{% endblock %}
